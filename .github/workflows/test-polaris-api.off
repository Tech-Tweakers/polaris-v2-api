name: 🧪 Polaris API - Tests & Lint

on:
  push:
    paths:
      - 'polaris_api/**'
      - 'tests/test_polaris_api.py'
  pull_request:
    paths:
      - 'polaris_api/**'
      - 'tests/test_polaris_api.py'

permissions:
  contents: write
  pull-requests: write

jobs:
  test-lint-polaris-api:
    name: 🚀 Polaris API
    runs-on: ubuntu-latest
    steps:
      - name: 📥 Checkout
        uses: actions/checkout@v4

      - name: 💾 Cache pip
        uses: actions/cache@v3
        with:
          path: ~/.cache/pip
          key: ${{ runner.os }}-pip-${{ hashFiles('**/requirements.txt') }}
          restore-keys: ${{ runner.os }}-pip-

      - name: 🐍 Setup Python
        uses: actions/setup-python@v4
        with:
          python-version: "3.10"

      - name: 📦 Instalar deps
        run: |
          echo "COQUI_TOS_AGREED=1" >> $GITHUB_ENV
          pip install --upgrade pip
          pip install -r polaris_api/requirements.txt
          pip install black pytest python-multipart pytest-asyncio "httpx>=0.23.0"

      - name: 🎨 Lint
        run: black --check polaris_api

      - name: 🧪 Testes
        run: PYTHONPATH=./ pytest tests/test_polaris_api.py --maxfail=1 --disable-warnings
